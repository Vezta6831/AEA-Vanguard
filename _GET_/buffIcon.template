[template_areabuffIcon]
#template for spore, king, queen and unit with area buff
@define buffName: 		na
@define buffIcon:		 	na
@define buffTAG:		 	na
@define buffArea:		 	na
isActive: false
text: Spore ${buffName} buff
isVisible: if numberOfUnitsInTeam(withTag='${buffTAG}', withinRange=${buffArea}, greaterThan=0)
iconImage: ROOT:data\icons\${buffIcon}.png
iconExtraImage: ROOT:data\icons\${buffIcon}.png
iconExtraColor: #00ff99
iconExtraIsVisible: true
buildSpeed: 0s
displayType: infoOnlyNoBox
isAlsoViewableByAllies: true
isAlsoViewableByEnemies: true
pos: 2
