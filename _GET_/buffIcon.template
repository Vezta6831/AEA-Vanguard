[template_globalbuffIcon]
#template for global upgrade from Evolotion chamber and etc
@define upName: 		na
@define upLvl:  		na
@define upIcon:		 	na
@define upType:			na
isActive: false
text: ${upName} buff T${upLvl}
iconImage: ROOT:data\icons\${upIcon}.png
iconExtraImage: ROOT:data\icons\T${upLvl}.png
iconExtraColor: #00ff99
iconExtraIsVisible: true
buildSpeed: 0s
displayType: infoOnlyNoBox
isAlsoViewableByAllies: true
isAlsoViewableByEnemies: true
pos: 1
